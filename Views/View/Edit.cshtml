@model FriendsTracker.Models.Friend
@{
    ViewBag.Title = "Editing friend";
}
<form asp-action="edit" asp-controller="View" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Age" class="control-label">Age</label>
        <input type="number" asp-for="Age" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save changes" class="btn btn-default" />
    </div>
</form>