@model FriendsTracker.Models.Friend
@{
    ViewBag.Title = "Deleting friend";
}

<div>
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>Age</dt>
        <dd>
            @Html.DisplayFor(model => model.Age)
        </dd>
    </dl>

    <div>
        <form asp-controller="View" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Delete" />
            </div>
        </form>
    </div>
</div>